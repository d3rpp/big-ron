// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildConfig {
  guildId     String       @id
  roleId      String?
  channelId   String
  wordpress   String
  lastChecked LastChecked?
}

model LastChecked {
  last    BigInt
  guildId String      @id
  guild   GuildConfig @relation(fields: [guildId], references: [guildId])
}
